# Stage 1: Cargo Chef - The Dependency Caching Engine
FROM rust:1.80-slim-bookworm AS chef
RUN cargo install cargo-chef
WORKDIR /app

# Install system-level build dependencies for gRPC and ProtoBuf
# Added clang and cmake for robust crate compilation
RUN apt-get update && apt-get install -y \
    pkg-config \
    libssl-dev \
    protobuf-compiler \
    libprotobuf-dev \
    clang \
    cmake \
    && rm -rf /var/lib/apt/lists/*

# Stage 2: Planner - Prepare the recipe
FROM chef AS planner
# Only copy what is needed to determine dependencies to maximize cache hits
COPY agent/ agent/
COPY proto/ proto/
COPY Cargo.toml Cargo.lock ./
RUN cargo chef prepare --recipe-path recipe.json

# Stage 3: Builder - The Muscle Factory
FROM chef AS builder
COPY --from=planner /app/recipe.json recipe.json
# Build dependencies - cached unless Cargo.toml/lock changes
RUN cargo chef cook --release --recipe-path recipe.json

# Now copy source and build the agent
COPY agent/ agent/
COPY proto/ proto/
COPY Cargo.toml Cargo.lock ./

# üõ°Ô∏è Build the Muscle in Release mode for SLA performance
# We use --bin to ensure we only build the agent binary
RUN cargo build --release --bin kari-agent

# Stage 4: Runtime - The Hardened Execution Environment
FROM debian:bookworm-slim AS runtime
WORKDIR /app

# Install runtime dependencies
RUN apt-get update && apt-get install -y \
    openssl \
    ca-certificates \
    git \
    && rm -rf /var/lib/apt/lists/*

# Copy the compiled binary from the builder
# üõ°Ô∏è Use the release target path
COPY --from=builder /app/target/release/kari-agent /usr/local/bin/kari-agent

# üõ°Ô∏è Strip the binary to remove debug symbols (reduces size by ~50-70%)
RUN apt-get update && apt-get install -y binutils && \
    strip /usr/local/bin/kari-agent && \
    apt-get remove -y binutils && \
    rm -rf /var/lib/apt/lists/*

# Environment Agnosticism
ENV KARI_SOCKET_PATH=/var/run/kari/agent.sock
ENV KARI_SSL_DIR=/etc/kari/ssl
ENV RUST_LOG=info

# üõ°Ô∏è The Muscle requires elevated caps for systemd/jail manipulation
# but should NOT run with full root‚Äêequivalent privileges.
USER root

# Create the socket directory so ownership can be managed on startup
RUN mkdir -p /var/run/kari

# üõ°Ô∏è Zero-Trust: Drop ALL capabilities then re-add only what we need
# - SYS_ADMIN: systemd scope management, cgroup v2 delegation
# - NET_ADMIN: iptables/nftables firewall policy application
# - CHOWN: Socket + file ownership (chown kari.sock to UID 1001)
# - DAC_OVERRIDE: Write to /etc/systemd, /etc/nginx, /etc/kari/ssl
# - SETUID/SETGID: useradd for jail user provisioning
# NOTE: These caps are enforced at container level via docker-compose.yml
#       so we document them here for SOLID traceability.

# Run the agent (ENTRYPOINT for proper PID 1 signal handling)
ENTRYPOINT ["kari-agent"]
